@using Microsoft.AspNetCore.Identity
@model BlogInfrastructure.ViewModel.ChangeRoleViewModel

<h2 style="margin-top: 20px;">Зміна ролей для користувача @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input style="margin-bottom: 15px;" class="form-check-input" type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
    </div>
    
    <button type="submit" class="btn btn-primary" style="font-size: 15px;">Зберегти</button>
</form>
