@model BlogDomain.Model.Article

@{
    ViewData["Title"] = "Редагувати статтю";
}

<h1>Редагувати статтю</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Назва
                <input asp-for="Title" class="form-control"></input>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                Текст
                <textarea asp-for="Text" class="form-control" style="resize: vertical;"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                Дата
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                Статус
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="WriterId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Articles" asp-route-id="@ViewBag.CategoryId" asp-route-categoryName="@ViewBag.CategoryName">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
