@model BlogDomain.Model.Category

@{
    ViewData["Title"] = "Подробиці статті (які ніколи не відобразяться)";
}

<h1>Подробиці статті (які ніколи не відобразяться)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model?.Id" method="get">
        <button type="submit" class="btn btn-primary">Редагувати</button>
    </form>
    <a asp-action="Index">Повернутися до списку</a>
</div>
