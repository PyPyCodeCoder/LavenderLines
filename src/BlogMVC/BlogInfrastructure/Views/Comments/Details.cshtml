@model BlogDomain.Model.Comment

@{
    ViewData["Title"] = "Подробиці коментарю";
}

<h1>Подробиці коментарю</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Текст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Стаття
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.Id)
        </dd>
        <dt class = "col-sm-2">
            Читач
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.Username)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model?.Id" method="get">
        <button type="submit" class="btn btn-primary">Редагувати</button>
    </form>
    <a asp-action="Index" asp-controller="Comments" asp-route-articleId="@ViewBag.Id">Повернутися до списку</a>
</div>