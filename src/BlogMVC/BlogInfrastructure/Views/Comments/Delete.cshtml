@model BlogDomain.Model.Comment

@{
    ViewData["Title"] = "Видалення коментарю";
}

<h1>Видалення коментарю</h1>

<h3>Ви впевнені що хочете видалити цей коментар?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Текст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Стаття
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Article.Id)
        </dd>
        <dt class = "col-sm-2">
            Читач
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.Username)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
    </form>
</div>

<div>
    <a asp-action="Index" asp-controller="Comments" asp-route-articleId="@ViewBag.Id">Повернутися до списку</a>
</div>