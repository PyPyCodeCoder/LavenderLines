@model BlogDomain.Model.Reader

@{
    ViewData["Title"] = "Подробиці читача";
}

<h1>Подробиці читача</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ім'я користувача
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model?.Id" method="get">
        <button type="submit" class="btn btn-primary">Редагувати</button>
    </form>
    <a asp-action="Index">Повернутися до списку</a>
</div>
