<div style="text-align: center;">
    @model BlogInfrastructure.ViewModel.ChangePasswordViewModel
    <h2 style="margin-top: 20px;">Зміна паролю</h2>
    <form asp-controller="Account" asp-action="ChangePassword" method="post" data-val="false">

        <div class="form-group">
            <label asp-for="OldPassword" class="col-form-label mt-4" style="font-size: 20px;"></label>
            <input asp-for="OldPassword" type="password" class="form-control" style="width: 100%;"/>
            <span asp-validation-for="OldPassword"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-form-label mt-4" style="font-size: 20px;"></label>
            <input asp-for="Password" type="password" class="form-control" style="width: 100%;"/>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordConfirm" class="col-form-label mt-4" style="font-size: 20px;"></label>
            <input asp-for="PasswordConfirm" type="password" class="form-control" style="width: 100%;"/>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>

        <div style="margin-top: 20px;">
            <input type="submit" class="btn btn-primary" style="font-size: 20px;" value="Змінити пароль"/>
        </div>
    </form>
</div>